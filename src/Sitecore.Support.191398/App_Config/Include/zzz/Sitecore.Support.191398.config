<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone OR ContentManagement OR ContentDelivery OR Processing OR Reporting">
      <events>
          <event name="packageinstall:starting">
              <handler patch:i="*[@type='Sitecore.ContentSearch.Events.PackagingEventHandler, Sitecore.ContentSearch']" type="Sitecore.Support.ContentSearch.Events.PackagingEventHandler, Sitecore.Support.191398" method="OnPackageInstallStartingHandler"/>
          </event>
          <event name="packageinstall:items:ended">
              <handler patch:i="*[@type='Sitecore.ContentSearch.Events.PackagingEventHandler, Sitecore.ContentSearch']" type="Sitecore.Support.ContentSearch.Events.PackagingEventHandler, Sitecore.Support.191398" method="OnPackageInstallItemsEndHandler"/>
          </event>
      </events> 
  </sitecore>
</configuration>